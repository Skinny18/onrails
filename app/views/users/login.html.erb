
<h1>Login</h1>

<% flash.each do |key, value| %>
  <div class="<%= key %>"><%= value %></div>
<% end %>

<%= form_for(:user, url: login_path, method: :post) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
